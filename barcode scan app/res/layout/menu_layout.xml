<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nueraid_background_blue"
    android:orientation="vertical" >

	<ImageView
	    android:id="@+id/nuera_image_view"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_margin="5dp"
	    android:layout_marginBottom="15dp"
	    android:layout_weight="0.69"
	    android:adjustViewBounds="true"
	    android:contentDescription="@string/description_nuera_logo"
	    android:scaleType="centerInside"
	    android:src="@drawable/nuera_logo_trans" />

	<Button
	    android:id="@+id/button_scan"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="5dp"
	    android:background="@color/pms294"
	    android:drawableLeft="@drawable/nueraid_scan_white"
	    android:padding="5dp"
	    android:text="@string/label_button_scan"
	    android:textColor="@color/white"
	    android:textSize="18sp" />

	<Button
	    android:id="@+id/button_examples"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="5dp"
	    android:background="@color/pms294"
	    android:drawableLeft="@drawable/examples_white"
	    android:padding="5dp"
	    android:text="@string/label_button_examples"
	    android:textColor="@color/white"
	    android:textSize="18sp" />

	<Button
	    android:id="@+id/button_camera_settings"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="5dp"
	    android:background="@color/pms294"
	    android:drawableLeft="@drawable/settings_white"
	    android:padding="5dp"
	    android:text="@string/label_button_camera_settings"
	    android:textColor="@color/white"
	    android:textSize="18sp" />

</LinearLayout>